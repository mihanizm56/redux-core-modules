{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": ["es2017", "es7", "es6", "dom", "dom.iterable"],
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "jsx":"react",
    "paths": {
      "@/*": ["lib/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}